<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#6CC7D1">

        <TextView
            android:id="@+id/matricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desarrollo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="15dp"
            android:rotationX="-17"
            android:rotationY="2"
            android:text="CRONOGRAMA DE MATRICULAS EXTRAORDINARIAS"
            android:textSize="20sp"
            app:fontFamily="@font/alfa_slab_one" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:src="@drawable/cuadro" />

        <TextView
            android:id="@+id/matricula2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desarrollo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="15dp"
            android:rotationX="-17"
            android:rotationY="2"
            android:text="CRONOGRAMA DE MATRICULAS ESPECIALES"
            android:textSize="20sp"
            app:fontFamily="@font/alfa_slab_one" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:src="@drawable/especiales" />

        <TextView
            android:id="@+id/matricula3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desarrollo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="15dp"
            android:rotationX="-17"
            android:rotationY="2"
            android:text="REQUISITOS PARA MATRÃCULA SEGUNDO SEMESTRE 2020"
            android:textSize="20sp"
            app:fontFamily="@font/alfa_slab_one" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:src="@drawable/food" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>