<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_equipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/administrativos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Administrativos"
                    android:textSize="26sp"
                    app:fontFamily="@font/alfa_slab_one" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="270dp"
                    android:src="@drawable/administrativos" />

                <TextView
                    android:id="@+id/mecanica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Mecanica Automotriz"
                    android:textSize="26sp"
                    app:fontFamily="@font/alfa_slab_one" />

                <ImageView
                    android:id="@+id/mecanicaima"
                    android:layout_width="wrap_content"
                    android:layout_height="270dp"
                    android:src="@drawable/mecanicaaut" />
                <ImageView
                    android:id="@+id/mecanicaim"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="200dp"
                    android:src="@drawable/elec" />
                <TextView
                    android:id="@+id/electricidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Electricidad"
                    android:textSize="26sp"
                    app:fontFamily="@font/alfa_slab_one" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:src="@drawable/electricity" />
                <TextView
                    android:id="@+id/idiomas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Centro de Idiomas"
                    android:textSize="26sp"
                    app:fontFamily="@font/alfa_slab_one" />
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:src="@drawable/idiomas" />
                <ImageView
                    android:id="@+id/imageView6"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:src="@drawable/idioma" />
                <TextView
                    android:id="@+id/alimentos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Procesamiento de alimentos"
                    android:textSize="26sp"
                    app:fontFamily="@font/alfa_slab_one" />
                <ImageView
                    android:id="@+id/imageView7"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:src="@drawable/alimentos" />
                <ImageView
                    android:id="@+id/imageView8"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:src="@drawable/alimento" />
                <ImageView
                    android:id="@+id/imageView9"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:src="@drawable/aliment" />
                <TextView
                    android:id="@+id/contabilidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Contabilidad"
                    android:textSize="26sp"
                    app:fontFamily="@font/alfa_slab_one" />
                <ImageView
                    android:id="@+id/imageView10"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:src="@drawable/contabilida" />
                <ImageView
                    android:id="@+id/imageView11"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:src="@drawable/contabili" />
                <TextView
                    android:id="@+id/infantil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Contabilidad"
                    android:textSize="26sp"
                    app:fontFamily="@font/alfa_slab_one" />
                <ImageView
                    android:id="@+id/imageView12"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:src="@drawable/infantil" />
                <TextView
                    android:id="@+id/redes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Redes Sociales"
                    android:textSize="26sp"
                    app:fontFamily="@font/alfa_slab_one"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="412dp"
                    android:layout_height="194dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_below="@id/red"
                                android:layout_marginTop="9dp"
                                android:text="FACEBOOK"
                                android:textSize="15sp"
                                app:fontFamily="@font/aclonica" />

                            <ImageView
                                android:id="@+id/red"
                                android:layout_width="144dp"
                                android:layout_height="90dp"
                                android:onClick="Facebook"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                app:srcCompat="@drawable/facebook" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dd"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="INSTAGRAM"
                                android:textSize="16sp"
                                app:fontFamily="@font/aclonica" />

                            <ImageView
                                android:id="@+id/dd"
                                android:layout_width="126dp"
                                android:layout_height="74dp"
                                android:onClick="Instagram"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                app:srcCompat="@drawable/instagram" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>